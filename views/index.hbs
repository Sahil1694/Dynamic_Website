    {{!-- Banner Section --}}

     <section class="banner1_section background1 pb-3 pt-3">
        <div class="container text-center ">
          <div class="row">
            <div class="col-md-12">
              <h1>Start Searching for Hostels</h1>
              <p>
                Under Construction !!!
              </p>
              <button class="btn btn-outline-primary">Start Searching</button>
            </div>
          </div>
        </div>
     </section>   
  

    {{!-- services section --}}
    <section id="services_section" class="py-4">
        <div class="container text-center py-3">
          <h1 class="text-center text-secondary">Our Services</h1>
           <div class="row mt-5">
          {{!-- first service col --}}
          {{#each services}}
          <div class="col-md-4">
              <div class="card">
                   <div class="card-body">
                    <div class="container text-center">
                     <i class="{{this.icon}} service_icon"></i>
                    </div>

                    <h3 class="card-title">{{this.title}}</h3>
                    <p>{{this.description}}</p>
                      <a href="{{this.linkText}}">
                        <button class="button">
                         {{this.link}}
                        </button>
                      </a>
                      {{!-- <a href="#!" class="ml-3">Support</a> --}}
                   </div>
              </div> 
          </div>
         {{/each}}

        </div>
      </div>
        
    </section>

    {{!-- banner 2 section --}}
    <section class="banner2_section py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-6 text-center pt-5">
                {{!-- left side text --}}
                <h3>We work for students,not for money</h3>
                <p>
